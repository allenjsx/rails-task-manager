<h1>Tasks#index</h1>
<p>Find me in app/views/tasks/index.html.erb</p>

<ul>
  <% @tasks.each do |task| %>
    <li>
      <strong><%= task.name %></strong>,
      <p><%= task.details %></p>
      <%= link_to "Details", task_path(task) %>
      <%= link_to "Edit this task", edit_task_path(task) %>
      <%= link_to "Delete this task", task_path(task), method: "delete" %>
    </li>
  <% end %>
</ul>

<footer> <%= link_to "Create a new task", new_task_path %></footer>

